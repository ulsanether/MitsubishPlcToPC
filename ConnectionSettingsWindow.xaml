<Window
    x:Class="MitsubishiPlcToPC.ConnectionSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="통신 설정"
    Width="600"
    Height="600"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border Grid.Row="0" Background="#2196F3">
            <TextBlock
                Margin="20,0"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Foreground="White"
                Text="통신 설정" />
        </Border>

        <!--  Content  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!--  Connection Type  -->
                <TextBlock
                    Margin="0,10,0,5"
                    FontWeight="Bold"
                    Text="연결 방식" />
                <StackPanel Margin="0,5" Orientation="Horizontal">
                    <RadioButton
                        x:Name="EthernetRadio"
                        Margin="0,0,20,0"
                        Checked="ConnectionType_Changed"
                        Content="Ethernet (TCP/IP)"
                        GroupName="ConnectionType"
                        IsChecked="True" />
                    <RadioButton
                        x:Name="SerialRadio"
                        Checked="ConnectionType_Changed"
                        Content="Serial (RS-232/422/485)"
                        GroupName="ConnectionType" />
                </StackPanel>

                <!--  Ethernet Settings  -->
                <Border
                    x:Name="EthernetPanel"
                    Margin="0,15"
                    Padding="15"
                    Background="#E3F2FD"
                    CornerRadius="5">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontWeight="Bold"
                            Text="Ethernet 설정" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Margin="0,0,0,5" Text="IP 주소" />
                                <TextBox
                                    x:Name="IpAddressTextBox"
                                    Height="30"
                                    Text="192.168.1.100" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Margin="0,0,0,5" Text="포트" />
                                <TextBox
                                    x:Name="PortTextBox"
                                    Height="30"
                                    Text="5000" />
                            </StackPanel>
                        </Grid>

                        <TextBlock Margin="0,15,0,5" Text="프로토콜" />
                        <ComboBox x:Name="ProtocolComboBox" Height="30">
                            <ComboBoxItem Content="TCP" IsSelected="True" />
                            <ComboBoxItem Content="UDP" />
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!--  Serial Settings  -->
                <Border
                    x:Name="SerialPanel"
                    Margin="0,15"
                    Padding="15"
                    Background="#E8F5E9"
                    CornerRadius="5"
                    Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontWeight="Bold"
                            Text="Serial 통신 설정" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Margin="0,0,0,5" Text="포트" />
                                <ComboBox x:Name="SerialPortComboBox" Height="30">
                                    <ComboBoxItem Content="COM1" IsSelected="True" />
                                    <ComboBoxItem Content="COM2" />
                                    <ComboBoxItem Content="COM3" />
                                    <ComboBoxItem Content="COM4" />
                                    <ComboBoxItem Content="COM5" />
                                    <ComboBoxItem Content="COM6" />
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Margin="0,0,0,5" Text="Baud Rate" />
                                <ComboBox x:Name="BaudRateComboBox" Height="30">
                                    <ComboBoxItem Content="9600" />
                                    <ComboBoxItem Content="19200" />
                                    <ComboBoxItem Content="38400" />
                                    <ComboBoxItem Content="57600" />
                                    <ComboBoxItem Content="115200" IsSelected="True" />
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                <TextBlock Margin="0,0,0,5" Text="Data Bits" />
                                <ComboBox x:Name="DataBitsComboBox" Height="30">
                                    <ComboBoxItem Content="7" />
                                    <ComboBoxItem Content="8" IsSelected="True" />
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="5,0">
                                <TextBlock Margin="0,0,0,5" Text="Stop Bits" />
                                <ComboBox x:Name="StopBitsComboBox" Height="30">
                                    <ComboBoxItem Content="1" IsSelected="True" />
                                    <ComboBoxItem Content="2" />
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="5,0,0,0">
                                <TextBlock Margin="0,0,0,5" Text="Parity" />
                                <ComboBox x:Name="ParityComboBox" Height="30">
                                    <ComboBoxItem Content="None" IsSelected="True" />
                                    <ComboBoxItem Content="Odd" />
                                    <ComboBoxItem Content="Even" />
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!--  PLC Settings  -->
                <Border
                    Margin="0,15"
                    Padding="15"
                    Background="White"
                    CornerRadius="5">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            FontWeight="Bold"
                            Text="PLC 설정" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Margin="0,0,0,5" Text="PLC 타입" />
                                <ComboBox x:Name="PlcTypeComboBox" Height="30">
                                    <ComboBoxItem Content="Q Series" IsSelected="True" />
                                    <ComboBoxItem Content="iQ-R Series" />
                                    <ComboBoxItem Content="iQ-F Series" />
                                    <ComboBoxItem Content="L Series" />
                                    <ComboBoxItem Content="FX Series" />
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Margin="0,0,0,5" Text="국번" />
                                <TextBox
                                    x:Name="StationNumberTextBox"
                                    Height="30"
                                    Text="0" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!--  Footer  -->
        <Border
            Grid.Row="2"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="0,1,0,0">
            <StackPanel
                Margin="20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="80"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"
                    Content="취소" />
                <Button
                    Width="80"
                    Height="35"
                    Background="#2196F3"
                    Click="SaveButton_Click"
                    Content="저장"
                    Foreground="White" />
            </StackPanel>
        </Border>
    </Grid>
</Window>